<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crmejia.gasola" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewLogActivity"
            android:label="@string/title_activity_new_log" >
        </activity>
        <activity
            android:name=".EndLogActivity"
            android:label="@string/title_activity_end_log" >
        </activity>
        <activity
            android:name=".LogDetailActivity"
            android:label="@string/title_activity_log_detail" >
        </activity>
        <provider
            android:authorities="com.crmejia.gasola"
            android:name=".data.LogProvider"/>
    </application>

</manifest>
